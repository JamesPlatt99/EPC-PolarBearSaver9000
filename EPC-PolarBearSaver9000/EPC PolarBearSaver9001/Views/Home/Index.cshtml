@model EPCPolarBearSaver9001.Models.AddressFinder
@{
    ViewData["Title"] = "API";
}
<script src="~/js/AddressLineFromPostCode.js"></script>


<h2>Home</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Postcode" class="control-label"></label>
                <input asp-for="Postcode" class="form-control" id="PostcodeTextBox" />
                <span asp-validation-for="Postcode" class="text-danger"></span>
                <select asp-for="Address1" class="form-control" id="AddressLineDropdown" disabled="disabled"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Get Score" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

